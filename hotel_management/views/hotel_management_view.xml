<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="hotel_management_view_tree" model="ir.ui.view">
		<field name="name">hotel.management.tree</field>
		<field name="model">hotel.management</field>
		<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="contact"/>
					<field name="email"/>
					<field name="address"/>
					<field name="website"/>
				</tree>
		</field>
	</record>

	<record id="hotel_management_view_form" model="ir.ui.view">
		<field name="name">hotel.management.form</field>
		<field name="model">hotel.management</field>
		<field name="arch" type="xml">
			<form>				
				<sheet>
					<group>
						<field name="image"/>
						<field name="name"/>
						<field name="contact"/>
						<field name="email"/>
						<field name="address"/>
						<field name="website"/>						
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="hotel_management_view_kanban" model="ir.ui.view">
		<field name="name">hotel.management.view.kanban</field>
		<field name="model">hotel.management</field>
		<field name="arch" type="xml">
			<kanban class="o_res_partner_kanban">
				<field name="name"/>
				<field name="contact"/>
				<field name="email"/>
				<field name="address"/>
				<field name="website"/>
				<field name="image"/>
				<field name="id"/>			
				<templates>
					<t t-name="kanban-box">
						<div t-attf-class="oe_kanban_vignette oe_semantic_html_override">
							<a type="open"><img alt="Contact image" t-att-src="kanban_image('hotel.management', 'image', record.id.raw_value)" width="128" height="128" class="oe_kanban_avatar pull-right"/></a>
							<div class="oe_kanban_details">
								<div><b>Name:</b><b><field name="name"/></b></div>
								<div><b>Contact:</b><field name="contact"/></div>
								<div><b>Email:</b><field name="email"/></div>
								<div><b>Address:</b><field name="address"/></div>
								<div><b>Website:</b><field name="website"/></div>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>

	<record id="action_hotel_management_view" model="ir.actions.act_window">
		<field name="name">Hotel Management</field>
		<field name="res_model">hotel.management</field>
		<field name="view_mode">kanban,tree,form</field>
	</record>

	<menuitem id="main_menu_hotel"
			name="Hotel"
			sequence="1"/>

	<menuitem id="menu_hotel_management"
			name="Hotel Management"
			parent="main_menu_hotel"
			action="action_hotel_management_view"
			sequence="2"/>
</odoo>