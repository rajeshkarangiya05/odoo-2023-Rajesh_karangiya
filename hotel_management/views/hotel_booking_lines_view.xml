<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="hotel_booking_lines_view_tree" model="ir.ui.view">
		<field name="name">hotel.booking.lines.view.tree</field>
		<field name="model">hotel.room.booking.lines</field>
		<field name="arch" type="xml">
				<tree>
					<field name="user_id"/>
					<field name="hotel_room_id"/>
					<field name="count_adults"/>
					<field name="count_children"/>
					<field name="default_price"/>
				</tree>
		</field>
	</record>

	<record id="hotel_booking_lines_view_form" model="ir.ui.view">
		<field name="name">hotel.booking.lines.view.form</field>
		<field name="model">hotel.room.booking.lines</field>
		<field name="arch" type="xml">
			<form>		
				<sheet>
					<group>
						<field name="user_id"/>				
						<field name="hotel_room_id"/>
						<field name="count_adults"/>
						<field name="count_children"/>
						<field name="default_price"/>				
					</group>				
				</sheet>
			</form>
		</field>
	</record> 

	<record id="action_booking_lines_view" model="ir.actions.act_window">
		<field name="name">Hotel Booking Lines</field>
		<field name="res_model">hotel.room.booking.lines</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="menu_booking_lines"
			name="Hotel Booking Lines"
			parent="main_menu_hotel"
			action="action_booking_lines_view"
			sequence="4"/>
</odoo>