<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="model_send_mail_checkout" model="ir.actions.server">
            <field name="name">Send Mail checkout</field>
            <field name="model_id" ref="model_hotel_room_booking"/>
            <field name="binding_model_id" ref="hotel_management.model_hotel_room_booking"/>
            <field name="binding_view_types">form,list</field>
            <field name="state">code</field>
            <field name="code">action = records.action_send_mail_checkout()</field>
        </record>


        <record id="ir_cron_check_out_reminder" model="ir.cron">
            <field name="name">Check-out Reminder</field>
            <field name="model_id" ref="hotel_management.model_hotel_room_booking"/>
            <field name="state">code</field>
            <field name="code">model.cron_checkout_reminder()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>
