<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="cancel_booking_view_tree" model="ir.ui.view">
        <field name="name">cancel.booking.tree</field>
        <field name="model">cancel.booking</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="choice" widget="radio"/>
                </tree>
        </field>
    </record>
    <record id="cancel_booking_view_form" model="ir.ui.view">
        <field name="name">cancel.booking.form</field>
        <field name="model">cancel.booking</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="choice" widget="radio"/>
                    </group>
                </sheet>
                <footer>
                    <button special="cancel" data-hotkey="z" string="Cancel" class ="btn-secondary"/>
                    <button name = "action_confirm" data-hotkey="o" string="Confirm" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record> 

    <record id="action_cancel_booking__view" model="ir.actions.act_window">
        <field name="name">Cancel Booking</field>
        <field name="res_model">cancel.booking</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>