<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.module.category" id="module_hotel_management">
		<field name="name">Hotel Access</field>
		<field name="sequence">100</field>
		<field name="visible" eval="0"/>
	</record>
	<record id="group_receptionist_a" model="res.groups">
		<field name="name">receptionist</field>
		<field name="category_id" ref="hotel_management.module_hotel_management"/>
		<field name="comment">the receptionist will have access to his own data in the hotel application.</field>
	</record>
	<record id="group_booking_admin_a" model="res.groups">
		<field name="name">Booking Admin</field>
		<field name="category_id" ref="hotel_management.module_hotel_management"/>
		<field name="implied_ids" eval="[(4, ref('hotel_management.group_receptionist_a'))]"/>
		<field name="comment">the booking admin will have access to his own data in the hotel application.</field>
	</record>

	 <record id="group_administration_a" model="res.groups">
		<field name="name">Administration</field>
		<field name="category_id" ref="hotel_management.module_hotel_management"/>
		<field name="implied_ids" eval="[(4, ref('hotel_management.group_booking_admin_a'))]"/>
		<field name="comment">the administrator will have access to all data in the hotel application.</field>
	</record>
	
	
</odoo>