<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="product_description_view" model="ir.ui.view">
		<field name="name">product.description.view</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//notebook/page[@name='general_information']/group/group[@name='group_general']/field[@name='p2']" position="after">
				<field name='description_new'/>
			</xpath>
		</field>
	</record>
</odoo>