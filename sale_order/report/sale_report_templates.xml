<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_sale_order_product_image" inherit_id="sale.report_saleorder_document">
		<xpath expr="//div[1]/table[1]/thead/tr/th[@name='th_description']" position="before">
			<th name="th_image" class="text-left">Image</th>
		</xpath>

		<xpath expr="//div[1]/table[1]/tbody/t[2]/tr[1]/t[1]/td[@name='td_name']" position="before">
			<td><img t-att-src="'/web/image/product.product/' + str(line.product_id.id) + '/image_1920'" style="max-height:3cm; max-width:3cm;"/></td>
		</xpath>
	</template>
</odoo>
