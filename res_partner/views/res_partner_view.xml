<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']/group[@name='container_row_2']/group[@name='sale']" position="inside">
                <field name="is_prime_customer" groups="res_partner.group_prime_customer"/>
                <field name="discount" attrs="{'invisible':[('is_prime_customer','=',False)],'required':[('is_prime_customer','=',True)]}"/>
            </xpath>
        </field>
    </record>

</odoo>