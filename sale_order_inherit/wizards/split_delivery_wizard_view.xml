<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="sale_split_delivery_wizard_view_form" model="ir.ui.view">
		<field name="name">split.delivery.wizard.view.form</field>
		<field name="model">split.delivery.wizard</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="name"/>
					</group>
					<notebook>
						<page>
							<field name="split_product_ids">
								<tree editable="bottom">
									<field name="product_data_id"/>
								</tree>
							</field>
						</page>
					</notebook>
					<footer>
						<button special="cancel" data-hotkey="z" string="Cancel" class ="btn-secondary"/>
						<button name = "action_alot" data-hotkey="o" string="ALOT" type="object" class="btn-primary"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>

</odoo>