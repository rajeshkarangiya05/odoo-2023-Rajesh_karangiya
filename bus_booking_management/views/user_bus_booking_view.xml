<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="user_bus_booking_view_tree" model="ir.ui.view">
		<field name="name">user.bus.booking.view.tree</field>
		<field name="model">user.bus.booking</field>
		<field name="arch" type="xml">
				<tree>
					<field name="way"/>
					<field name="country_id"/>
					<field name="state_id"/>
					<field name="from_id"/>
					<field name="name"/>
					<field name="id_proof"/>
					<field name="date"/>
					<field name="from_destination"/>
					<field name="to_destination"/>
					<field name="bus_type"/>
				</tree>
		</field>
	</record>

	<record id="user_bus_booking_view_form" model="ir.ui.view">
		<field name="name">user.bus.booking.view.form</field>
		<field name="model">user.bus.booking</field>
		<field name="arch" type="xml">
			<form>
				<header>					
					<button name="approve_booking" class="oe_highlight" states="draft" string="Book" type="object"/>
					<button name="cancel_booking" class="oe_highlight" states="booked" string="Cancel" type="object"/>					
					<field name="state" widget="statusbar" statusbar_visible="draft,booked,cancel"/>
				</header>
				<sheet>
					<group>
						<field name="way" widget="radio"  options="{'horizontal': true}"/>
						<field name="country_id"/>
						<field name="state_id"/>
						<field name="from_id"/>
						<field name="name"/>
						<field name="id_proof"/>
						<field name="date"/>
						<field name="from_destination"/>
						<field name="to_destination"/>
						<field name="bus_type"/>				
					</group>				
				</sheet>
			</form>
		</field>
	</record>
	<record id="user_bus_booking_view_kanban" model="ir.ui.view">
		<field name="name">user.bus.booking.view.kanban</field>
		<field name="model">user.bus.booking</field>
		<field name="arch" type="xml">
			<kanban class="o_res_partner_kanban" default_group_by="state">
				<field name="name"/>
				<field name="id_proof"/>
				<field name="date"/>
				<field name="from_destination"/>
				<field name="to_destination"/>
				<field name="bus_type"/>			
				<templates>
					<t t-name="kanban-box">
						<div t-attf-class="oe_kanban_global_click">
							<div class="oe_kanban_details">
								<strong class="o_kanban_record_title">
									<div><b>Name:</b><b><field name="name"/></b></div>
									<div><b>ID Proof:</b><field name="id_proof"/></div>
									<div><b>Date:</b><field name="date"/></div>
									<div><b>From:</b><field name="from_destination"/></div>
									<div><b>To:</b><field name="to_destination"/></div>
									<div><b>Bus Type:</b><field name="bus_type"/></div>
								</strong>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>
	<record id="action_user_bus_booking" model="ir.actions.act_window">
		<field name="name">User Bus Booking</field>
		<field name="res_model">user.bus.booking</field>
		<field name="view_mode">tree,kanban,form</field>
	</record>

	<menuitem id="menu_user_bus_booking"
			name="User Booking"
			parent="menu_bus_booking"
			action="action_user_bus_booking"
			sequence="3"/>
</odoo>