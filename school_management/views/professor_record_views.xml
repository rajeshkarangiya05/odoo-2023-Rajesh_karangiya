<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="professor_record_tree_view">
        <field name="name">professor.record.tree.view</field>
        <field name="model">professor.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="subject_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="professor_record_form_view">
        <field name="name">professor.record.form.view</field>
        <field name="model">professor.record</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="subject_id"/>
                        <field name="student_id" context="{'cust':'1'}" help="Partner"/>
                    </group>
                    <!--                    select_location-->
                    <!--                     <button name="if-->
                    <!--                        " context="{'ssss':select_location}" type="object" string="Setup" class="float-right btn-secondary"/>-->
                    <!--                     <field name="partnerdata" invisible="context.get('aaaaa', False)"/>-->
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for student class tree and form view-->
    <record id="action_professor_record" model="ir.actions.act_window">
        <field name="name">Professor</field>
        <field name="res_model">professor.record</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="sale.product_template_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="product.product_template_kanban_view"/>
        <field name="domain">[('detailed_type', '=', 'consu')]</field>
    </record>


    <menuitem id="school_professor" name="Professor" parent="school_management_deatils" sequence="7"
              action="action_professor_record"/>
    <menuitem id="product_cat_main" name="Product Category" parent="sale.product_menu_catalog"
              action='action_professor_record' sequence="4"/>


</odoo>
