<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="designation_data_view_tree" model="ir.ui.view">
		<field name="name">designation.data.view.tree</field>
		<field name="model">designation.data</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name"/>
			</tree>
		</field>
	</record>
	<record id="designation_data_view_form" model="ir.ui.view">
		<field name="name">designation.data.view.form</field>
		<field name="model">designation.data</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="name"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="action_designation_data_view" model="ir.actions.act_window">
		<field name="name">Designation Data</field>
		<field name="res_model">designation.data</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="menu_one_time_input"
			name="structure Base data"
			parent="menu_organization"
			sequence="3"/>

	<menuitem id="menu_designation_data"
			name="Designation"
			action="action_designation_data_view"
			parent="menu_one_time_input"
			sequence="1"/>

</odoo>