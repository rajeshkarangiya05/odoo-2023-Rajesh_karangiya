<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="stock_view_tree" model="ir.ui.view">
		<field name="name">stock.view.tree</field>
        <field name="model">medicine.stock</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="name_id"/>
                    <field name="quantity"/>
                    <field name="year"/>
                </tree>
        </field>
    </record>
    <record id="stock_view_view_form" model="ir.ui.view">
        <field name="name">stock.view.form</field>
        <field name="model">medicine.stock</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name_id"/>
                        <field name="quantity"/>
                        <field name="year"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record> 

    <record id="stock_view" model="ir.actions.act_window">
        <field name="name">Stock data</field>
        <field name="res_model">medicine.stock</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="stock_information"
            name="Stock Data"
            parent="medicine_information_medical"
            action="stock_view"
            sequence="2"/>

</odoo>