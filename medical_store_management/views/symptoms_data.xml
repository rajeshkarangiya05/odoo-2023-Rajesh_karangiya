<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="symptoms_view_tree" model="ir.ui.view">
		<field name="name">symptoms.view.tree</field>
        <field name="model">symptoms.data</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="medicine_id"/>
                    <field name="symptoms_ids"/>
                </tree>
        </field>
    </record>
    <record id="symptoms_view_form" model="ir.ui.view">
        <field name="name">symptoms.view.form</field>
        <field name="model">symptoms.data</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="medicine_id"/>
                        <field name="symptoms_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record> 

    <record id="symptoms_view" model="ir.actions.act_window">
        <field name="name">Symptoms data</field>
        <field name="res_model">symptoms.data</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="symptoms_information"
            name="Symptoms Data"
            parent="medicine_information_medical"
            action="symptoms_view"
            sequence="3"/>

</odoo>