<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="medicine_lot_view_tree" model="ir.ui.view">
		<field name="name">medicine.lot.view.tree</field>
		<field name="model">medicine.lot</field>
		<field name="arch" type="xml">
				<tree>
					<field name="lot"/>
					<field name="name_id"/>
					<field name="manufacturing"/>
					<field name="expiry"/>
					<field name="quantity"/>
				</tree>
		</field>
	</record>
	<record id="medicine_lot_view_form" model="ir.ui.view">
		<field name="name">medicine.lot.view.form</field>
		<field name="model">medicine.lot</field>
		<field name="arch" type="xml">
			<form>
				<header>
					<button name="medicine_lot_view" class="oe_highlight" states="draft" string="Expired" type="object"/>
					<field name="state" widget="statusbar" statusbar_visible="draft,done"/>
				</header> 
				<sheet>
					<group>
						<field name="lot"/>
						<field name="name_id"/>
						<field name="manufacturing"/>
						<field name="expiry"/>
						<field name="quantity"/>
					</group>
				</sheet>
			</form>
		</field> 
	</record>  
 
	<record id="action_medicine_lot" model="ir.actions.act_window">
		<field name="name">Medicine Lot</field>
		<field name="res_model">medicine.lot</field>
		<field name="view_mode">tree,form</field>
	</record>
	
	<menuitem id="menu_medicine_lot_data"
			name="Medicine Lot"
			parent="medicine_information_menu"
			action ="action_medicine_lot"
			sequence="3"/>

</odoo>