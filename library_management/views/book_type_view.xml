<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="book_type_view_tree" model="ir.ui.view">
		<field name="name">book.type.tree</field>
        <field name="model">book.type</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
        </field>
    </record>
    <record id="book_type_view_form" model="ir.ui.view">
        <field name="name">book.type.form</field>
        <field name="model">book.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record> 

    <record id="action_book_type_view" model="ir.actions.act_window">
        <field name="name">Register Books</field>
        <field name="res_model">book.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_book_type"
            name="Book Types"
            parent="book_details_data"
            action="action_book_type_view"
            sequence="5"/>

</odoo>