<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="issue_book_view_tree" model="ir.ui.view">
		<field name="name">issue.book.tree</field>
        <field name="model">issue.books</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="name_id"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="address"/>
                    <field name="books_lines_ids"/>
                    <field name="issue_date"/>
                </tree>
        </field>
    </record>
    <record id="issue_book_view_form" model="ir.ui.view">
        <field name="name">issue.book.form</field>
        <field name="model">issue.books</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="return_users" type="object" class="btn-primary" string="user data"/>
                    <button name="add_new_data" type="object" class="btn-primary" string="CreateDummyBook"/>
                    <button name="Delete_given_data" type="object" class="btn-primary" string="DeleteDummys"/>
                    <button name="issue_view" class="oe_highlight" states="draft" string="Issue" type="object"/>
                    <button name="return_view" class="oe_highlight" states="issued" string="Return" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,issued,return"/>
                </header> 
                <sheet>
                    <group>
                        <group>
                            <field name="name_id"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="book_name"/>
                            <field name="quantity"/>

                        </group>
                    </group>
                    <notebook>
                        <page string="Book details" >
                            <field name="books_lines_ids">
                                <tree editable="bottom">
                                    <field name="book_name_id"/>
                                    <field name="issued_quantity"/>
                                    <field name="book_data_ids" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record> 

    <record id="issue_book_view" model="ir.actions.act_window">
        <field name="name">Issue Book</field>
        <field name="res_model">issue.books</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="book_details_Menu"
            name="Books"
            sequence="1"/>

    <menuitem id="book_details_user"
            name="User Data"
            parent="book_details_Menu"
            action="issue_book_view"
            sequence="2"/>

    <menuitem id="book_details_data"
            name="Library Data"
            parent="book_details_Menu"
            action="issue_book_view"
            sequence="3"/>

</odoo>