<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="book_details_view_kanban" model="ir.ui.view">
		<field name="name">book.details.kanban</field>
		<field name="model">book.details</field>
		<field name="arch" type="xml">
			<kanban class="o_res_partner_kanban">
				<field name="book_name"/>
				<field name="price"/>
				<field name="pages"/>
				<field name="quantity"/>
				<field name="book_image"/>
				<field name="id"/>
				<templates>
					<t t-name="kanban-box">
						<div t-attf-class="oe_kanban_global_click">

							<div class="o_kanban_image">
								<img alt="Contact image" t-att-src="kanban_image('book.details', 'book_image', record.id.raw_value)"/>
							</div>
							<div class="oe_kanban_details">
								<strong class="o_kanban_record_title">
									<div><b>Book Name: </b><field name="book_name"/></div>
									<div><b>Book Price: </b><field name="price"/></div>
									<div><b>Pages: </b><field name="pages"/></div>
									<div><b>Quantity: </b><field name="quantity"/></div>
								</strong>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>
	<record id="book_details_view_form" model="ir.ui.view">
		<field name="name">book.details.form</field>
		<field name="model">book.details</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<div class="oe_button_box" name="button_box">
						<button name="action_book_quantity"
								type="object"
								class="oe_stat_button"
								icon="fa-pencil-square-o">
						<field string="Stock" name="stock_quantity" widget="statinfo"/>
						</button>
					</div>
					<group>
						<field name="book_image"/>
						<field name="book_id"/>
						<field name="name_id"/>
						<field name="book_name"/>
						<field name="price"/>
						<field name="pages"/>
						<field name="quantity"/>
						<field name ="book_types_ids" widget="many2many_tags"/>
						<field name="charges"/>
					</group>
				</sheet>
			</form>
		</field>
	</record> 

	<record id="book_details_view" model="ir.actions.act_window">
		<field name="name">Book Details</field>
		<field name="res_model">book.details</field>
		<field name="view_mode">kanban,tree,form</field>
	</record>

	<menuitem id="book_details"
			name="Book Details"
			parent="book_details_data"
			action="book_details_view"
			sequence="2"/>

</odoo>