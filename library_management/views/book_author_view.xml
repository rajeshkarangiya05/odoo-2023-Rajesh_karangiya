<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="book_author_view_tree" model="ir.ui.view">
		<field name="name">book.author.tree</field>
        <field name="model">book.author</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="contact"/>
                    <field name="address"/>
                </tree>
        </field>
    </record>
    <record id="book_author_view_form" model="ir.ui.view">
        <field name="name">book.author.form</field>
        <field name="model">book.author</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>                        
                        <field name="name"/>
                        <field name="email"/>
                        <field name="contact"/>
                        <field name="address"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record> 

    <record id="book_author_view" model="ir.actions.act_window">
        <field name="name">Book Author</field>
        <field name="res_model">book.author</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="book_author"
            name="Book Author"
            parent="book_details_data"
            action="book_author_view"
            sequence="1"/>

</odoo>