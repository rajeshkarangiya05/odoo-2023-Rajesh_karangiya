<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="register_books_view_tree" model="ir.ui.view">
		<field name="name">register.books.tree</field>
        <field name="model">register.books</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="book_name_id"/>
                    <field name="incoming_date"/>
                    <field name="outgoing_date"/>
                    <field name="issued_quantity"/>
                </tree>
        </field>
    </record>
    <record id="register_books_view_form" model="ir.ui.view">
        <field name="name">register.books.form</field>
        <field name="model">register.books</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="book_name_id"/>
                        <field name="incoming_date"/>
                        <field name="outgoing_date"/>
                        <field name="issued_quantity"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record> 

    <record id="register_books_view" model="ir.actions.act_window">
        <field name="name">Register Books</field>
        <field name="res_model">register.books</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="register_books"
            name="Register Books"
            parent="book_details_data"
            action="register_books_view"
            sequence="3"/>

</odoo>