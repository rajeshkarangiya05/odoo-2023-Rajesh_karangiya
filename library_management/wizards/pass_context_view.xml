<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="pass_context_view_form" model="ir.ui.view">
		<field name="name">pass.context.form</field>
		<field name="model">pass.context</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="first_name"/>
						<field name="middle_name" invisible="context.get('Nationality')"/>
						<field name="last_name"/>
					</group>                        
				</sheet> 
			</form>
		</field>
	</record> 
</odoo>