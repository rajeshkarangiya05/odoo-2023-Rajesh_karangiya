<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="return_date_view_tree" model="ir.ui.view">
        <field name="name">return.date.tree</field>
        <field name="model">return.date</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="expiry"/>
                </tree>
        </field>
    </record>
    <record id="return_date_view_form" model="ir.ui.view">
        <field name="name">return.date.form</field>
        <field name="model">return.date</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="expiry"/>
                    </group>
                </sheet>
                <footer>
                    <button special="cancel" data-hotkey="z" string="Cancel" class ="btn-secondary"/>
                    <button name = "action_confirm" data-hotkey="o" string="Confirm" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record> 

    <record id="action_return_date__view" model="ir.actions.act_window">
        <field name="name">Return Date</field>
        <field name="res_model">return.date</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>