<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="payment_type_view_tree" model="ir.ui.view">
		<field name="name">payment.type.view.tree</field>
		<field name="model">payment.type</field>
		<field name="arch" type="xml">
			<tree>
				<field  name="name"/>
			</tree>
		</field>
	</record>
	<record id="payment_type_view_form" model="ir.ui.view">
		<field name="name">payment.type.view.form</field>
		<field name="model">payment.type</field>
		<field name="arch" type="xml">
			<form string="User Data">
				<sheet>
					<group>
						<field  name="name"/>
					</group>				
				</sheet>
			</form>
		</field>
	</record>
	
	<record id="action_payment_type_view" model="ir.actions.act_window">
		<field name="name">Payment Type</field>
		<field name="res_model">payment.type</field>
		<field name="view_mode">tree,form</field>
	</record>

    <menuitem id="sub_menu_payment_type"
            name="Payment Type"
            parent="sub_menu_parking_data"
            action="action_payment_type_view"
            sequence="1"/>
</odoo>