<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="send_mail_id" model="mail.template">
		<field name="name">Send Email Template</field>
		<field name="model_id" ref="parking_management.model_parking_user"/>
		<field name="email_from">{{"rajesh@icreativetechnolabs.com"}}</field>
		<field name="email_to">{{object.email}}</field>
		<field name="subject">Parking Slot Confirmation</field>
		<field name="body_html" type="html">
			<table>
				<tr>
					<td>
						Dear <t t-out="object.name"/>,
						<br/>
						<br/>
						<p>
							we got your payment and confirmed your slot 
							<b><t t-out="object.slots.base_name_id.name"/></b>
							<b><t t-out="object.slots.section_name"/></b>
							<b><t t-out="object.slots.section_partition"/></b><br/>
							For any other service's visit our website
							Kindly keep you token 
							<b><t t-out="object.token"/></b> 
							for any further query.<br/>
							Thank you and have a greate day.<br/>                         
						</p>
						Regards,
					</td>
				</tr>
			</table>
		</field>
  </record>
</odoo>
