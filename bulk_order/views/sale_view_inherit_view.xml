<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sale_view_inherit_view_tree" model="ir.ui.view">
		<field name="name">sale_view_inherit_tree</field>
        <field name="model">sale.view.inherit</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="bulk_product_ids"/>
                </tree>
        </field>
    </record>
    <record id="sale_view_inherit_view_form" model="ir.ui.view">
        <field name="name">sale.view.inherit.view.form</field>
        <field name="model">sale.view.inherit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>                        
                    	<field name="name"/>
                        <field name="bulk_product_ids" widget="many2many_tags"/>                     
                    </group>
                </sheet>
            </form>
        </field>
    </record> 

    <record id="action_sale_view_inherit" model="ir.actions.act_window">
        <field name="name">Bulk Order</field>
        <field name="res_model">sale.view.inherit</field>
        <field name="view_mode">tree,form</field>
    </record>

	<menuitem id="menu_sale_view_inherit"
		name='Bulk Order'
		parent="sale.sale_menu_root"
		action="action_sale_view_inherit"
		sequence="36"/>

</odoo>